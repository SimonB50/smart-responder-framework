{
  "debug": true,
  "language": {
    "default": "en",
    "available": ["en"],
    "fallbacks": {
      "fr": "en"
    }
  },
  "request": {
    "minLength": 5,
    "maxLength": 2000,
    "expectedSimilarity": 0.4
  },
  "response": {
    "requiredScore": 0.975,
    "default": {
      "actions": ["handOff"],
      "messages": {
        "en": "Sorry, I don't understand."
      }
    }
  },
  "server": {
    "host": "0.0.0.0",
    "port": 3000,
    "auth": {
      "enabled": true,
      "token": "randomly_generated_token"
    },
    "web": {
      "enabled": false,
      "staticPath": "./public"
    }
  },
  "connectors": {
    "discord": {
      "enabled": true,
      "token": "BOT_TOKEN",
      "prefix": "<@mention>",
      "autoResponse": {
        "enabled": false,
        "ignoreInvalid": true,
        "channels": ["123456789012345678"]
      }
    }
  },
  "translation": {
    "engine": "google",
    "apiKey": "OPTIONAL_API_KEY",
    "apiUrl": "URL_OF_LIBRETRANSLATE_INSTANCE",
    "targetLanguages": ["pl"]
  }
}
